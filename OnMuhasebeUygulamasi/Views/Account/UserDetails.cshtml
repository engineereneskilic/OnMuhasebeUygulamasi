@model List<OnMuhasebeUygulamasi.Models.UserDetailsModel>
@{
    ViewBag.Title = "StandartUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";

   

    //ViewBag.StandartUsers

    int i = 0;

}

<div class="container-fluid">
    <div style="margin-top:20px;" class="row">

        <div class="col-lg-12">
